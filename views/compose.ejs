<%- include("partials/header") -%>

<h1>Compose</h1>
<div class="formthree ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <form  action="/compose" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="sr-only">Name</label>
                                <input type="text" class="form-control" required="" id="nameSix" placeholder="Title" name="postTitle" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <!--end of /.row-->
                    <div class="form-group">
                        <label class="sr-only">Message</label>
                        <textarea class="form-control" required="" rows="7" placeholder="Message" name="post" autocomplete="off"></textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary">Post</button>
                </form>
            </div>
            <!-- /.col-md-8 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>

<%- include("partials/footer") -%>

